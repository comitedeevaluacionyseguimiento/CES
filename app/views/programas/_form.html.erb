<%= simple_form_for([@centro,@coordinador,@programa], :html => { :class => 'form-horizontal' }, :remote => true  ) do |f| %>

  <%= f.error_notification %>

  <%= f.input :descripcion %>
  <%= f.input :abreviatura %>
  <%= f.input :estado %>
  

  <div class="form-actions">
    <%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', centro_coordinador_programas_path, :class => 'btn btn-default' %>
  </div>
<% end %>
<%- model_class = Programa -%>
<div class="buscador">
  <div class="row-fluid">
    <div class="row-fluid">
      <div class="span6">
        <%= form_tag request.path,:class => "form-search", :method => 'get' do %>
          <%= content_tag :label do %>
            <br/>
            <br/>
            <div class="input-append" id='efecto1'>
              <%= text_field_tag :search, params[:search],:class=>"input-medium search-query search"%>
              <%= submit_tag "Buscar", :descripcion => nil, :class=>"btn btn-info disable" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class=" colorp">
          
            <h2>Programas</h2>
          
            <p>
              Total Programas: <%= @programas.count %>
            </p>
      </div>
    </div>
  </div>
</div>
<br>
<table class="table table-bordered pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "descripcion" %></th>
      <th><%= sortable "abreviatura" %></th>
      <th><%= sortable "centro_id" %></th>
      <th><%= sortable "estado" %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @programas %>
  </tbody>
</table>
<% if has_role == "admin" %>
  <%= link_to 'Nuevo Programa', new_centro_coordinador_programa_path(@centro,@coordinador), :class => 'btn btn-mini btn-primary', :remote => true %>
<% end %>
<%= link_to 'Atras', centro_coordinadores_path,  :class => 'btn btn-mini' %> 

<div align="center">
  <%= will_paginate @programas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>




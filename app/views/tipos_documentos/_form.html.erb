<%= simple_form_for(@tipo_documento, :html => { :class => 'form-horizontal' }, :remote => true  ) do |f| %>

  <%= f.error_notification %>

  <%= f.input :sigla %>
  <%= f.input :descripcion %>
  <div class="form-actions">
  	<%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', tipos_documentos_path, :class => 'btn btn-default' %>
  </div>
<% end %>

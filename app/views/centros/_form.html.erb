<%= simple_form_for(@centro, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :nombre %>
    <%= f.input :abreviatura %>
  </div>


  <div class="form-actions">
  	<%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', centros_path, :class => 'btn btn-default' %>
  </div>
<% end %>
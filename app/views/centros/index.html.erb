<%- model_class = Centro -%>
<div class="buscador">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span6">
          <%= form_tag request.path,:class=>"form-search",:method => 'get' do %>
            <%= content_tag :label do %>
              <h4>Buscar </h4>
              <div  class="input-append" id='efecto1'>
                <%= text_field_tag :search, params[:search],:class=>"input-medium search-query search" %>
                <%= submit_tag "Consultar", :nombre => nil, :class=>"btn btn-info disable" %>
              </div>
            <% end %>
          <% end %>

        </div>
        <div class=" colorp">
            
              <h2>Centros</h2>
            
              <p>
                Total Centros: <%= @centros.count %>
              </p>
        </div>
      </div>
    </div>
  </div>
<br>

<table class="table table-bordered table-hover pretty">
  <thead>
    <tr>  
      <th><%= sortable "id" %></th>
      <th><%= sortable "nombre" %></th> 
      <th><%= sortable "abreviatura" %></th> 
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @centros %>
  </tbody>
</table>
  <% if has_role == "admin" %>
    <%= link_to 'Nuevo centro', new_centro_path, :class => 'btn btn-primary', :remote => true %>
  <% end %>
<div align="center">
  <%= will_paginate @centros, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>



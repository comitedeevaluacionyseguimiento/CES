<%- model_class = Aprendiz -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @aprendiz.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_documento_id) %>:</strong></dt>
  <dd><%= @aprendiz.tipo_documento_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_document) %>:</strong></dt>
  <dd><%= @aprendiz.num_document %></dd>
  <dt><strong><%= model_class.human_attribute_name(:programa_id) %>:</strong></dt>
  <dd><%= @aprendiz.programa_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ficha) %>:</strong></dt>
  <dd><%= @aprendiz.ficha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:historia_id) %>:</strong></dt>
  <dd><%= @aprendiz.historia_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              aprendices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_aprendiz_path(@aprendiz), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              aprendiz_path(@aprendiz),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= simple_form_for @configuracion, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :subdirector, input_html: { rows: 9, class: 'span9' } %>
  <%= f.input :considerando, input_html: { rows: 9, class: 'span9' } %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                configuraciones_path, :class => 'btn' %>
  </div>
<% end %>

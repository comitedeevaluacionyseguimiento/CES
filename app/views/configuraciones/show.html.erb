<%- model_class = Configuracion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:subdirector) %>:</strong></dt>
  <dd><%= @configuracion.subdirector %></dd>
  <dt><strong><%= model_class.human_attribute_name(:considerando) %>:</strong></dt>
  <dd><%= @configuracion.considerando %></dd>
  <dt><strong><%= model_class.human_attribute_name(:acta_id) %>:</strong></dt>
  <dd><%= @configuracion.acta_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              configuraciones_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_configuracion_path(@configuracion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              configuracion_path(@configuracion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

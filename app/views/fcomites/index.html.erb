<%- model_class = Fcomite -%>
<div class="buscador">
  <div class="row-fluid">
    <div class="row-fluid">
      <div class="span6">
        <%= form_tag request.path,:class=>"form-search", :method => 'get' do %>
          <%= content_tag :label do %>
            <br/>
            <h2>Buscador</h2>
            <div class="input-append" id='efecto1'>
              <%= text_field_tag :search, params[:search],:class=>"input-medium search-query search"  %>
              <%= submit_tag "Buscar", :fecha => nil, :class=>"btn btn-info  disable"%>
            </div>
          <% end %>
        <% end %>

        <div class="span6">
            <br>
            <br>
            <br>
            <br>
        </div>
      </div>
      <div class=" colorp"> 
        <h2>Comites</h2>
          <p>
            total Comites: <%= @fcomites.count %>
          </p>
          <br>
          <br>
      </div>
    </div>
  </div>
</div>
<br>
<table class="table table-striped pretty">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Lugar</th>
      <th>Tipo</th>
      <th>Estado</th>
      <th></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
   <%= render @fcomites %>
  </tbody>
</table>
<% if has_role == "admin" %>
  <%= link_to t('.new', :default => t("helpers.links.new")),new_fcomite_path, :class => 'btn btn-primary' %>
<% end %>

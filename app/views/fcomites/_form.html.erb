<%= javascript_include_tag "fecha.js" %>   
<%= simple_form_for(@fcomite, :html => { :class => 'form-horizontal' }) do |f| %>
  
  <%= f.input :fecha, :as => :string, :label => "fecha", :input_html => {  :class=>"datepicker" } %>
  <%= f.input :lugar %>
 
  
    <div class="controls-group" >
	    <label class="control-label">Tipo de Comite</label>
	    <div class="controls">
	     <%= select_tag(:tipo, options_for_select([["selecione un tipo"],['Ordinario','Ordinario'], ['Extraordinario','Extraordinario']])) %>
	    </div>  
	  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),fcomites_path, :class => 'btn' %>
  </div>
<% end %>

<% javascript_include_tag "fecha.js" %>
<%= simple_form_for(@acta, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>

  <div class="responsive">
    <div class="modal-body">  
      <div class="control-group">
        <div class="row hero-unit" >
          <div class= "span9"> 
            <center><h4></h4></center>
            <hr>
            <div class ="control-group span4">
              <label class="control-label" for="inputName">Hora Inicio</label>
              <div class="controls" >
                <div class =" input-append bootstrap-timepicker ">
                  <%= f.input_field  :hora_inicio,:as => :string, :class => "time_picker input-small", :id=>'efecto1'%>
                  <span class="add-on"><i class="icon-time"></i></span>
                </div>
              </div>
            </div>
            <div class ="control-group span4">
              <label class="control-label" for="inputName">Hora de Finalizacion</label>
              <div class="controls" >
                <div class =" input-append bootstrap-timepicker">
                  <%= f.input_field  :hora_terminacion, :as => :string, :class => "time_picker input-small", :id=>'efecto1'%>
                  <span class="add-on"><i class="icon-time"></i></span>
                </div>
              </div>
            </div>
          </div>
          <center><h4></h4></center>
          <hr>
          <div class="span9">
            <label class="control-label" for="inputName">objetivo</label>
            <%= f.text_area :objetivo_de_la_reunion, :rows => 7, :class => "span11" %>
          </div>
          <div class="span9">
            <label class="control-label" for="inputName">Desarrollo</label>
            <%= f.text_area :desarrollo_reunion, :rows => 7, :class => "span11"%>
          </div>
          <div class="span9">
            <label class="control-label" for="inputName">Concluciones</label>
            <%= f.text_area :conclusiones, :rows => 7, :class => "span11" %>
          </div>
        </div>
        <div class= "span12">
          <div class="form-actions">
            <%= f.submit "Guardar", :class => 'btn btn-primary' %>
            <%= link_to 'Atras', actas_path, :class => 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
